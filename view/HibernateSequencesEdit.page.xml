<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/HibernateSequencesList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{hibernateSequencesHome.wire}"/>

   <param name="hibernateSequencesFrom"/>
   <param name="hibernateSequencesSequenceName" value="#{hibernateSequencesHome.hibernateSequencesId.sequenceName}"/>
   <param name="hibernateSequencesSequenceNextHiValue" value="#{hibernateSequencesHome.hibernateSequencesId.sequenceNextHiValue}"/>


   <navigation from-action="#{hibernateSequencesHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/HibernateSequences.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{hibernateSequencesHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/HibernateSequences.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{hibernateSequencesHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/HibernateSequencesList.xhtml"/>
      </rule>
   </navigation>

</page>
